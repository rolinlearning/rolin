---
import { type CollectionEntry } from 'astro:content';
import { formatDate } from '../../utils/date';

interface Props {
  podcasts: CollectionEntry<'podcast'>[];
}

const { podcasts } = Astro.props;
---
<section class="max-w-4xl mx-auto px-4 py-16">
<!-- <section class="mt-16 space-y-12 max-w-3xl mx-auto px-6 md:px-8 lg:px-12"> -->
  <!-- <h2 class="text-3xl font-bold mb-8 dark:text-gray-100">Podcast Episodes</h2> -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-gray-100 mb-6 tracking-tight">
      Podcast Episodes
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Exploring technology, development, and creative insights through carefully crafted articles.
    </p>
  </div>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {podcasts.map((podcast) => (
      <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl group">
        <div class="p-6">
          <h2>
            <a href={`/podcast/${podcast.slug}`} 
            class="text-xl font-bold text-gray-900 dark:text-white mb-2 
                       group-hover:text-blue-600 dark:group-hover:text-blue-400 
                       transition-colors duration-10"
            >
              {podcast.data.title}
            </a>
          </h2>
          <div class="text-sm text-gray-500 mb-4">
            <time datetime={podcast.data.pubDate.toISOString()}>
              {formatDate(podcast.data.pubDate)}
            </time>
            {podcast.data.episodeNumber && (
              <span class="mx-2">â€¢</span>
              <span>Episode {podcast.data.episodeNumber}</span>
            )}
          </div>
          <p class="text-gray-600 dark:text-gray-300 line-clamp-3">
            {podcast.data.description}
          </p>
        </div>
      </article>
    ))}
  </div>
</section>