---
import type { CollectionEntry } from 'astro:content';
import PodcastCard from './PodcastCard.astro';

interface Props {
  podcasts: CollectionEntry<'podcast'>[];
}

const { podcasts } = Astro.props;
---

<section class="py-16 px-4 sm:px-6 lg:px-8 mx-auto max-w-7xl">
  <div class="mb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-gray-100 
              mb-6 tracking-tight">
      Mis Podcasts
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Explora lo último en tecnología y desarrollo web con conocimientos y tendencias que dan forma al futuro.
    </p>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {podcasts.map((podcast) => (
      <PodcastCard podcast={podcast} />
    ))}
  </div>
</section>