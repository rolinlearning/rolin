---
import { type CollectionEntry } from 'astro:content';
import { formatDate } from '../../utils/date';

interface Props {
  podcasts: CollectionEntry<'podcast'>[];
}

const { podcasts } = Astro.props;
---
<section class="max-w-4xl mx-auto px-4 py-16">
<!-- <section class="mt-16 space-y-12 max-w-3xl mx-auto px-6 md:px-8 lg:px-12"> -->
  <h2 class="text-3xl font-bold mb-8">Podcast Episodes</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {podcasts.map((podcast) => (
      <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">
            <a href={`/podcast/${podcast.slug}`} class="hover:text-blue-600">
              {podcast.data.title}
            </a>
          </h3>
          <div class="text-sm text-gray-500 mb-4">
            <time datetime={podcast.data.pubDate.toISOString()}>
              {formatDate(podcast.data.pubDate)}
            </time>
            {podcast.data.episodeNumber && (
              <span class="mx-2">â€¢</span>
              <span>Episode {podcast.data.episodeNumber}</span>
            )}
          </div>
          <p class="text-gray-600 dark:text-gray-300 line-clamp-3">
            {podcast.data.description}
          </p>
        </div>
      </article>
    ))}
  </div>
</section>