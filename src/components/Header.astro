---
import NavigationMenu from "./vue/NavigationMenu.vue";
import MobileMenu from "./vue/MobileMenu.vue";
const base = import.meta.env.BASE_URL.replace(/\/$/, '')
---

<header class="relative z-50 py-8 sm:py-12 lg:py-16">
  <nav class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0"
    >
      <!-- Profile Image -->
      <div
        class="flex-shrink-0 transition-transform duration-300 hover:scale-105"
      >
        <a  href={`${base}/`} class="block group">
          <img
            class="h-16 w-16 md:h-24 md:w-24 lg:h-32 lg:w-32 rounded-full shadow-lg
                    ring-2 ring-gray-200 dark:ring-gray-700 transition-all duration-300
                    group-hover:ring-4 group-hover:ring-blue-500 dark:group-hover:ring-blue-400"
            src={`${base}/profile.jpg`}
            alt="Profile picture"
          />
        </a>
      </div>
      <!-- Name and Navigation -->
      <div class="flex-grow md:ml-8 lg:ml-12">
        <a href={`${base}/`} class="block text-center md:text-left">
          <h1
            class="text-2xl md:text-3xl lg:text-4xl font-extrabold text-gray-900 dark:text-white
                   tracking-tight hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300"
          >
            Rolin Espinoza
          </h1>
        </a>

         <!-- Desktop Navigation -->
         <div class="hidden md:block">
          <NavigationMenu client:load pathname={Astro.url.pathname} />
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden absolute top-4 right-4">
          <MobileMenu client:load pathname={Astro.url.pathname} />
        </div>
      </div>
    </div>
  </nav>
</header>
