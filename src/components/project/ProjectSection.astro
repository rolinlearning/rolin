---
import { type CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.vue';

interface Props {
  projects: CollectionEntry<'project'>[];
}

const { projects } = Astro.props;
---

<section class="py-16 px-4 sm:px-6 lg:px-8 mx-auto max-w-7xl">
  <div class="mb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-gray-100 
               mb-6 tracking-tight">
      Mis Proyectos
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Explora algunos de los proyectos de aplicaciones web creados con tecnolog√≠as modernas. 
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project) => (
      <ProjectCard project={project} client:visible />
    ))}
  </div>
</section>