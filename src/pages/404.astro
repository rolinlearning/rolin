---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title="404: Page Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen px-4 py-16 text-center">
    <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
    <p class="text-2xl font-semibold text-gray-700 dark:text-gray-300 mb-8">
      Page Not Found
    </p>
    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md">
      The page you're looking for doesn't exist or has been moved to another URL.
    </p>
    <a
      href={`${base}/`}
      class="px-6 py-3 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors duration-200"
    >
      Return Home
    </a>
  </main>
</Layout>