---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import RoadmapItem from '../components/roadmap/RoadmapItem.vue';

const roadmapEntries = await getCollection('roadmap');
const roadmapData = roadmapEntries[0];
const topics = roadmapData?.data?.topics || [];

// Optional: Log to verify data
console.log('Roadmap Data:', roadmapData?.data);
---

<Layout title="Developer Roadmap">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">
        Developer Roadmap
      </h1>
      <p class="text-gray-700 dark:text-gray-300">
        {roadmapData?.data?.description || 
          "My learning journey and future development plans."}
      </p>
    </div>
    
    <RoadmapItem topics={topics} client:load />
  </main>
</Layout>